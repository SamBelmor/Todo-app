<!DOCTYPE html>
<html>
  <head>
    <title>Todo app</title>
    <link rel="icon" href="../../assets/images/todo_app_icon.ico">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"></link>
  </head>
  <body>

    <nav class="navbar navbar-default" style="background: #EFF5FC;">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Todo App", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <% if current_user.present? %>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
          <% else %>
            <li><%= link_to "Log In", new_user_session_path %></li>
          <% end %>
        </ul>
        <% if user_signed_in? %>
          <div class="navbar-right">
            <span><%= image_tag current_user.avatar, style: 'width:40px; border-radius: 50%;' %></span>
            <span><%= link_to "New Task", new_item_path, class: "navbar-text navbar-link" %></span>
            <span><%= link_to "Edit Profile", edit_user_registration_path, class: "navbar-text navbar-link" %></span>
          </div>
        <% end %>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
